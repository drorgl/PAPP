{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "outDir": "dist",
        "removeComments": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ]
}